{
  "name": "horizons",
  "version": "1.0.0",
  "description": "Discover Open Collective",
  "repository": "https://github.com/opencollective/horizons",
  "private": true,
  "bugs": {
    "url": "https://github.com/opencollective/opencollective/issues"
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "dev": "next -p 3004",
    "build": "npm run fetch-data && next build",
    "graphql:codegen": "graphql-codegen --config scripts/config/graphql-codegen.ts",
    "graphql:update": "npm run graphql:get-schema && npm run graphql:codegen",
    "graphql:get-schema": "ts-node ./scripts/update-gql-schemas.ts http://localhost:3060/graphql/v2 lib/graphql/schemaV2.graphql && prettier lib/graphql/schemaV2.graphql --write",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "prettier": "prettier \"*.@(js|ts|jsx|tsx|json|md)\" \"@(components|lib|pages|scripts|server|test|stories)/**/*.@(js|json|md|mdx)\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write",
    "start": "next start",
    "type:check": "tsc",
    "fetch-data": "ts-node ./scripts/fetch-data.ts"
  },
  "contributors": [
    "Benjamin Piouffle <benjamin@opencollective.com>",
    "Fran√ßois Hodierne <francois@opencollective.com>"
  ],
  "dependencies": {
    "@apollo/client": "3.6.5",
    "@headlessui/react": "^1.7.4",
    "@opencollective/frontend-components": "0.3.8",
    "@styled-icons/fa-solid": "^10.46.0",
    "@styled-system/prop-types": "^5.1.5",
    "apexcharts": "^3.36.3",
    "babel-plugin-formatjs": "^10.3.31",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "class-variance-authority": "^0.3.0",
    "dayjs": "^1.11.6",
    "deepmerge": "4.2.2",
    "dotenv": "^16.0.3",
    "graphql": "16.6.0",
    "gray-matter": "^4.0.3",
    "lodash": "4.17.21",
    "next": "12.3.1",
    "next-auth": "4.15.0",
    "next-transpile-modules": "^9.1.0",
    "nextjs-progressbar": "0.0.16",
    "node-fetch": "2.6.7",
    "nodemailer": "6",
    "polished": "^4.2.2",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-animate-height": "^3.0.5",
    "react-apexcharts": "^1.4.0",
    "react-dom": "^17.0.2",
    "react-flip-toolkit": "^7.0.17",
    "react-intersection-observer": "^9.4.1",
    "react-intl": "^6.2.1",
    "react-lite-youtube-embed": "^2.3.52",
    "react-table": "^7.8.0",
    "remark": "^14.0.2",
    "remark-html": "^15.0.1",
    "sanitize-html": "^2.7.3",
    "styled-components": "^5.3.6",
    "styled-system": "^5.1.5",
    "swiper": "^8.4.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.7",
    "@graphql-codegen/gql-tag-operations-preset": "^1.6.0",
    "@graphql-eslint/eslint-plugin": "^3.12.0",
    "@next/eslint-plugin-next": "^12.3.1",
    "@types/node": "^17",
    "@types/node-fetch": "^2.6.2",
    "@types/react": "^18.0.15",
    "@types/sanitize-html": "^2.6.2",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "autoprefixer": "^10.4.13",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-styled-components": "^2.0.7",
    "eslint": "^8.8.0",
    "eslint-config-next": "^12.0.10",
    "eslint-config-opencollective": "^3.0.3",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-formatjs": "^4.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-styled-components-a11y": "1.0.0",
    "postcss": "^8.4.19",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.2.4",
    "typescript": "^4"
  }
}
